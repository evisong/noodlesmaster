			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.item/vnd.me.evis.mobile.noodle.provider.noodles" />
			</intent-filter>
		</activity>
		<provider android:authorities="me.evis.mobile.noodle.provider.manufacturercontentprovider"
			android:name="me.evis.mobile.noodle.provider.ManufacturerContentProvider" />
