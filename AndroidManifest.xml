			android:name="me.evis.mobile.noodle.provider.BarcodeContentProvider" />
		<activity android:name=".NoodlesList">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.me.evis.mobile.noodle.provider.noodles" />
			</intent-filter>
		</activity>
		<activity android:name=".ManufacturerList">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.me.evis.mobile.noodle.provider.manufacturer" />
			</intent-filter>
		</activity>
		<activity android:name=".BrandList">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.android.cursor.dir/vnd.me.evis.mobile.noodle.provider.brand" />
			</intent-filter>
		</activity>
	</application>
	<uses-sdk android:minSdkVersion="4" />
