<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- normal -->
    <item android:state_pressed="false" android:state_enabled="true"
          android:state_focused="false">
        <layer-list>
            <item>
	            <shape xmlns:android="http://schemas.android.com/apk/res/android" 
				    android:shape="oval">
				    <gradient android:startColor="#FF0088FF" android:endColor="#FF1466AE"
				            android:angle="270"/>
				    <stroke android:width="1dp" android:color="#FF1466AE" />
				</shape>
			</item>
			<item>
			    <bitmap android:src="@drawable/av_pause" android:gravity="center" />
			</item>
        </layer-list>
    </item>
    
    <!-- pressed -->
    <item android:state_pressed="true" android:state_enabled="true"
          android:drawable="@drawable/av_pause" />
    
    <!-- selected -->
    <item android:state_pressed="false" android:state_enabled="true"
          android:state_focused="true" android:drawable="@drawable/timepicker_up_selected" />
    
    <!-- disabled -->
    <item android:state_pressed="false" android:state_enabled="false"
          android:state_focused="false" android:drawable="@drawable/timepicker_up_disabled" />
    
    <!-- disabled focused -->
    <item android:state_pressed="false" android:state_enabled="false"
          android:state_focused="true" android:drawable="@drawable/timepicker_up_disabled_focused" />

</selector>
